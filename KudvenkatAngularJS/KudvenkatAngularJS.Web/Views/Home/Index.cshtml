@{
    ViewData["Title"] = "Home Page";
}

<div ng-app="app">
    <div ng-controller="HeaderController">
        <div>
            {{ message }}
        </div>
        <hr />
    </div>

    <div ng-controller="MainController">
        10 + 20 = {{ 10 + 20 }}
        <p>{{ message }}</p>

        <div class="card" style="width: 18rem;">
            @*<img class="card-img-top" src="..." alt="Card image cap">*@
            <div class="card-body">
                <h5 class="card-title">Employee</h5>
                <p class="card-text">Name: {{ employee.firstName }} {{ employee.lastName }}</p>
                <p class="card-text">Age: {{ employee.age }}</p>
            </div>
        </div>
        
    </div>
    <div>
        <div>
            40 + 50 = {{ 40 + 50 }}
            <p>
                -- {{ message }} -- can't see because it's not under a controller
            </p>
        </div>
    </div>

    <div ng-controller="FooterController">
        <hr />
        <div>
            {{ message }}
        </div>

    </div>
</div>
<br />
<br />
<br />
<br />
<div>
    <p>
        This part has 0 Angular influence
    </p>
    <p>
        40 + 50 = {{ 40 + 50 }}
    </p>
</div>


@section Scripts {
    @*Modules*@
    <script src="~/js/app.js"></script>
    @*Controllers*@
    <script src="~/js/app/controllers/MainController.js"></script>
    <script src="~/js/app/controllers/HeaderController.js"></script>
    <script src="~/js/app/controllers/FooterController.js"></script>
    @*Directives*@
    @*<script src="~/js/directives/singlelist.js"></script>*@
}